{
    "manifest_version": 3,
    "name": "Trophy Collector Plugin",
    "description": "Trophy downloader for Stuff Pages",
    "version": "2.0",
    "background": {
        "service_worker": "background.js"
      },  
    "action": {
     "default_icon": "icon.png"
    },
     "content_scripts": [
        {
          "matches": [
            "<all_urls>"
          ],
          "js": ["popup.js"]
        }
      ]
  }